{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {},
  "hosting": {
    "public": "dist",
    "cleanUrls": "true",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/**.*",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600, s-max-age=3600"
          },
          {
            "key": "Content-Security-Policy",
            "value": "img-src 'self'; upgrade-insecure-requests"
          }
        ]
      },
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(css|js|`)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=1209600"
          }
        ]
      },
      {
        "source": "sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/registration",
        "destination": "/our-center",
        "type": 301
      },
      {
        "source": "/aboutus",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/gallery",
        "destination": "/our-center",
        "type": 301
      },
      {
        "source": "/tuition",
        "destination": "/prices",
        "type": 301
      },
      {
        "source": "/blog",
        "destination": "/news/overview",
        "type": 301
      },
      {
        "source": "/staff",
        "destination": "/careers",
        "type": 301
      },
      {
        "source": "/news/overview/category/Announcements",
        "destination": "/news/overview",
        "type": 301
      }
    ]
  }
}
